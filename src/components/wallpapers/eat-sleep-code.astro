---
import Item from "../eat-sleep-code/Item.astro";
import WallpaperLayout from "../../layouts/WallpaperLayout.astro";
---

<WallpaperLayout>
  <div class="flex justify-center items-center h-full w-full">
    <div
      class="flex justify-between items-center lt-md:flex-col lt-md:min-h-600px h-70vh md:h-full md:min-w-700px md:w-58vw"
    >
      <Item item="eat" colorClass="color-accent-yellow">
        <div class="i-fa6-solid:utensils"></div>
      </Item>
      <Item item="sleep" colorClass="color-accent-green">
        <div class="i-fa6-solid:bed"></div>
      </Item>
      <Item item="code" colorClass="color-accent-blue">
        <div class="i-fa6-solid:code"></div>
      </Item>
      <Item item="repeat" colorClass="color-accent-red">
        <div class="i-fa6-solid:arrow-rotate-right"></div>
      </Item>
    </div>
  </div>
</WallpaperLayout>
